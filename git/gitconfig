[user]
	name = Siddharth Singh
	email = singh.siddharth7718@gmail.com
[core]
	pager = less
	excludesFile = ~/.gitignore_global
[alias]
	gr = log --oneline --graph --decorate --pretty=line
	gra = gr --all
	grp = gr --patch
	grs = gr --stat
	st = status -sb
	sts = stash
	df = diff
	ck = checkout
	cm = commit
	cma = commit --amend --no-edit
	br = branch
	rb = rebase
	unstage = reset HEAD --
[pretty]
	line = "%C(auto)%h %<|(60,trunc)%s %C(green)(%cd) %C(blue)<%an>%C(auto)%d"
[pull] 
	ff = only
[log]
	date=format:"%a %d/%m %H:%M"
[include]
	path = ~/.gitconfig_local
[merge]
	tool = nfugitive
[mergetool "nfugitive"]
	cmd = nvim -f -c "Gdiff" "$MERGED"
[diff]
	tool = nvimdiff2
[difftool "nvimdiff2"]
	cmd = nvim -d $LOCAL $REMOTE
[difftool]
	trustExitCode = true
